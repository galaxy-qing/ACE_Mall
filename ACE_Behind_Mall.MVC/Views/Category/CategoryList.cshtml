
@{
    ViewBag.Title = "CategoryList";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>商品分类列表</title>
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/layuiadmin/style/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="demoTable" style="margin-top:10px;margin-left:20px;">
        <button class="layui-btn layuiadmin-btn-admin" data-type="add">添加商品分类</button>
    </div>
    <table class="layui-table" id="demo" lay-data="{id: 'idTest',skin:'line'}" lay-filter="test"></table>
    <!--添加窗口-->
    <div id="divAdd" style="display: none">
        <div class="layui-form layui-form-pane" id="formAdd" style="padding: 20px 30px 0 50px;">
            <input type="hidden" name="ID" />
            <div class="layui-form-item">
                <label class="layui-form-label">分类名称</label>
                <div class="layui-input-block">
                    <input type="text" name="Name" placeholder="请输入分类名称" autocomplete="on" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item " pane>
                <label class="layui-form-label">是否显示</label>
                <div class="layui-input-inline">
                    <input type="radio" name="IsDelete" value="0" title="是" checked>
                    <input type="radio" name="IsDelete" value="1" title="否">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit lay-filter="formSubmit">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/layuiadmin/layui/layui.js"></script>
    <script src="~/js/GoodCategory/GoodCategory.js"></script>
    <script type="text/html" id="IsDelete">
        {{#  if( d.IsDelete ==0){ }}
        <input type="checkbox" data-id="{{d.ID}}" lay-event="IsDelete" checked="" name="open" lay-skin="switch" lay-filter="switchTest" lay-text="显示|不显示">
        {{#  } else { }}
        <input type="checkbox" data-id="{{d.ID}}" lay-event="IsDelete" name="open" lay-skin="switch" lay-filter="switchTest" lay-text="显示|不显示">
        {{#  } }}
    </script>
</body>
</html>
