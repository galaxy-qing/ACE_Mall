
@{
    ViewBag.Title = "AdmUserList";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layuiAdmin 后台管理员</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/layuiadmin/style/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="demoTable" style="margin-top:10px;margin-left:20px;">
        账号：
        <div class="layui-inline">
            <input class="layui-input" name="Account" id="inputReload" autocomplete="off">
        </div>
        <button class="layui-btn" data-type="reload">搜索</button>
        <button class="layui-btn layuiadmin-btn-admin" data-type="delete">删除</button>
        <button class="layui-btn layuiadmin-btn-admin" data-type="add">添加员工</button>
    </div>
    <table class="layui-table" id="tableList" lay-data="{page:true, id:'mainList',even:true}" lay-filter="list">
        <thead>
            <tr>
                <th lay-data="{checkbox:true, fixed: true}"></th>
                <th lay-data="{field:'PositionID',align: 'center', sort: true}">角色</th>
                @*<th lay-data="{field:'Image',align: 'center'}">头像</th>*@
                <th lay-data="{field:'ReallyName',align: 'center'}">真实姓名</th>
                <th lay-data="{field:'Account',align: 'center', sort: true}">账号</th>
                <th lay-data="{field:'Phone',align: 'center'}">电话</th>
                <th lay-data="{field:'Email',align: 'center'}">邮箱</th>
                <th lay-data="{field:'Birthday',align: 'center', sort: true}">出生日期</th>
                <th lay-data="{field:'Sex',align: 'center', sort: true}">性别</th>
                <th lay-data="{field:'CreateTime',align: 'center'}">加入时间</th>
                <th lay-data="{fixed: 'right',align:'center', toolbar: '#barList'}"></th>
            </tr>
        </thead>
    </table>
    <script type="text/html" id="barList">
        <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="detail"><i class="layui-icon layui-icon-form"></i>查看</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="update"><i class="layui-icon layui-icon-edit"></i>修改</a>
    </script>
</body>
</html>
<!--查看修改窗口-->
<div id="divDetail" lay-filter="layuiadmin-form-admin" style="display: none">
    <div class="layui-form layui-form-pane" id="formDetail" style="padding: 20px 30px 0 50px;">
        <input type="hidden" name="ID" v-model="ID" />
        <div class="layui-form-item">
            <label class="layui-form-label">真实姓名</label>
            <div class="layui-input-block">
                <input type="text" name="ReallyName" v-model="ReallyName" lay-verify="required" placeholder="请输入真实姓名" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">账户</label>
            <div class="layui-input-block">
                <input type="text" name="Account" v-model="Account" lay-verify="required" placeholder="请输入账户" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">手机号码</label>
            <div class="layui-input-block">
                <input type="text" name="Phone" v-model="Phone" lay-verify="phone" placeholder="请输入号码" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">邮箱</label>
            <div class="layui-input-block">
                <input type="text" name="Email" v-model="Email" lay-verify="email" placeholder="请输入邮箱" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">出生日期</label>
            <div class="layui-input-block">
                <input type="text" name="Birthday" id="Birthday" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*<div class="layui-form-item">
                <label class="layui-form-label">头像</label>
                <div class="layui-input-block">
                    <input type="text" name="Image" v-model="Image" lay-verify="required" placeholder="请上传图片" autocomplete="off" class="layui-input">
                </div>
                <button style="float: left;" type="button" class="layui-btn" id="layuiadmin-upload-useradmin">上传图片</button>
            </div>*@
        <div class="layui-form-item" lay-filter="sex">
            <label class="layui-form-label">性别</label>
            <div class="layui-input-block">
                <input type="radio" name="Sex" value="男" title="男" checked>
                <input type="radio" name="Sex" value="女" title="女">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">加入时间</label>
            <div class="layui-input-block">
                <input type="text" name="CreateTime" v-model="CreateTime" required lay-verify="required"
                       placeholder="加入时间" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item layui-hide">
            <input type="button" lay-submit lay-filter="formSubmit" id="formSubmit" value="确认">
        </div>
    </div>
</div>
