
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <title>layuiAdmin 主页</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/layuiadmin/style/admin.css" rel="stylesheet" />
    <style>
        .li-class {
            margin:100px auto;
            text-align: center
           
        }
        .li-class li {
            margin: 20px auto 20px auto
        }
        .h1-class {
            text-align: center;
            margin-top:100px;
        }
    </style>
</head>
<body>
    <h1 class="h1-class">欢迎 @ViewBag.account 登录本系统</h1>
    <ul class="layui-row layui-col-space10 li-class">
        <li class="layui-col-xs3">
            <a lay-href="/Role/RoleList">
                <i class="layui-icon layui-icon-username"></i>
                <cite>角色管理</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/AdminUser/AdmUserList">
                <i class="layui-icon layui-icon-username"></i>
                <cite>员工管理</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/User/UserList ">
                <i class="layui-icon layui-icon-username"></i>
                <cite>用户管理</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/Category/CategoryList">
                <i class="layui-icon layui-icon-find-fill"></i>
                <cite>商品分类</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/Good/GoodList">
                <i class="layui-icon layui-icon-fire"></i>
                <cite>商品列表</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/Evaluation/EvaluationList">
                <i class="layui-icon layui-icon-survey"></i>
                <cite>商品评论</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/Order/OrderList">
                <i class="layui-icon layui-icon-speaker"></i>
                <cite>订单列表</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/Statistics/GoodSaleList">
                <i class="layui-icon layui-icon-chart"></i>
                <cite>销售量统计</cite>
            </a>
        </li>
        <li class="layui-col-xs3">
            <a lay-href="/Statistics/SaleMoneyList">
                <i class="layui-icon layui-icon-chart"></i>
                <cite>销售额统计</cite>
            </a>
        </li>
    </ul> 
    <script src="~/layuiadmin/layui/layui.js"></script>
    <script>
        layui.config({
            base: '../../layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'console']);
    </script>
</body>
</html>

